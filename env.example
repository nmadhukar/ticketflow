# TicketFlow Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED - Database Configuration
# =============================================================================
# Render.com automatically provides DATABASE_URL for PostgreSQL
# For local development, use your local PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/ticketflow

# =============================================================================
# REQUIRED - Security & Authentication
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-32-character-random-session-secret-here
JWT_SECRET=your-32-character-random-jwt-secret-here

# JWT Token Expiration (optional - defaults shown)
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=5000

# =============================================================================
# AWS SERVICES (Optional - for email and AI features)
# =============================================================================
# Get these from AWS IAM console
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1

# =============================================================================
# MICROSOFT SSO (Optional - for Azure AD integration)
# =============================================================================
# Get these from Azure App Registration
MICROSOFT_CLIENT_ID=your-azure-app-client-id
MICROSOFT_CLIENT_SECRET=your-azure-app-secret
MICROSOFT_TENANT_ID=your-azure-tenant-id

# =============================================================================
# SECURITY & RATE LIMITING (Optional - defaults shown)
# =============================================================================
# Enable/disable security features
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Rate limiting settings
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Input validation
INPUT_VALIDATION_ENABLED=true
VALIDATION_STRICT_MODE=true

# =============================================================================
# DEVELOPMENT ONLY (Don't use in production)
# =============================================================================
# Uncomment for local development
# NODE_ENV=development
# DEBUG=true
# LOG_LEVEL=debug

# =============================================================================
# RENDER.COM DEPLOYMENT NOTES
# =============================================================================
# 1. DATABASE_URL is automatically provided by Render PostgreSQL
# 2. PORT is automatically set by Render
# 3. SESSION_SECRET and JWT_SECRET can be auto-generated in render.yaml
# 4. Add AWS credentials in Render dashboard if you have them
# 5. Add Microsoft SSO credentials in Render dashboard if configured
# 6. All other settings use sensible defaults
