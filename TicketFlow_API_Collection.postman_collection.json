      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/user",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "user"]
            },
            "description": "Get the currently authenticated user's profile information"
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "GET",
